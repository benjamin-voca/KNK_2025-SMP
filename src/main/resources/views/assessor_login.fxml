<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="425.0" prefWidth="400.0" styleClass="login-pane" stylesheets="@../css/loginassenssor.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AssessorLoginController">
    <children>
        <Label layoutX="100.0" layoutY="100.0" styleClass="title-text" text="Assessor Login">
            <font>
                <Font name="Segoe UI Semibold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="100.0" layoutY="128.0" styleClass="label-text" text="Assessor ID:" />
        <TextField fx:id="assessorIdField" layoutX="100.0" layoutY="159.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter assessor ID" styleClass="input-field" />
        <Label layoutX="103.0" layoutY="213.0" styleClass="label-text" text="Password:" />
        <PasswordField fx:id="passwordField" layoutX="100.0" layoutY="245.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter Password" styleClass="input-field" />
        <Button layoutX="150.0" layoutY="308.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="35.0" prefWidth="100.0" styleClass="primary-button" text="Login" />
        <Button layoutX="30.0" layoutY="31.0" mnemonicParsing="false" onAction="#handleBack" prefHeight="35.0" prefWidth="100.0" styleClass="secondary-button" text="Close" />
        <Label fx:id="errorLabel" layoutX="100.0" layoutY="353.0" prefWidth="200.0" styleClass="error-text" />
    </children>
</AnchorPane>
