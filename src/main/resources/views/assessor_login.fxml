<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/index.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AssessorLoginController">
    <children>
        <Label layoutX="200.0" layoutY="50.0" text="Assessor Login">
            <font>
                <Font name="Segoe UI Semibold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="100.0" layoutY="120.0" text="Assessor ID:" />
        <TextField fx:id="assessorIdField" layoutX="200.0" layoutY="115.0" prefWidth="250.0" />
        <Label layoutX="100.0" layoutY="170.0" text="Password:" />
        <PasswordField fx:id="passwordField" layoutX="200.0" layoutY="165.0" prefWidth="250.0" />
        <Button layoutX="200.0" layoutY="220.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" prefWidth="120.0" styleClass="btn-purple" text="Login" />
        <Button layoutX="330.0" layoutY="220.0" mnemonicParsing="false" onAction="#handleBack" prefHeight="40.0" prefWidth="120.0" styleClass="btn-red" text="Back" />
        <Label fx:id="errorLabel" layoutX="200.0" layoutY="270.0" prefWidth="250.0" styleClass="error-text" />
    </children>
</AnchorPane>