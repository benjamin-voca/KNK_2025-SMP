<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import utilities.Clock?>

<HBox fx:id="rootHBox" prefHeight="600.0" prefWidth="900.0" styleClass="root-layout" stylesheets="@../css/homepage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.OthersProfessorController">

    <!-- SIDEBAR -->
    <AnchorPane fx:id="sideBar" prefWidth="221.0" styleClass="sidebar">
        <children>
            <Clock height="120.0" layoutX="51.0" layoutY="14.0" width="120.0" />

            <Button layoutX="61.0" layoutY="142.0" mnemonicParsing="false" onAction="#goToHomePageProfessor" prefHeight="35.0" prefWidth="100.0" styleClass="nav-button" text="Home Page" />
            <Button layoutX="61.0" layoutY="203.0" mnemonicParsing="false" onAction="#goToProfileProfessor" prefHeight="35.0" prefWidth="100.0" styleClass="nav-button" text="Profile" />
            <Button layoutX="61.0" layoutY="263.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" styleClass="primary-nav-button" text="Classes" />
            <Button layoutX="61.0" layoutY="443.0" mnemonicParsing="false" onAction="#goToLogOut" prefHeight="35.0" prefWidth="100.0" styleClass="logout-button" text="Log Out" />
        </children>
    </AnchorPane>

    <!-- MAIN CONTENT AREA -->
    <AnchorPane fx:id="mainContent" styleClass="main-content" HBox.hgrow="ALWAYS">
        <children>
            <!-- Toggle Sidebar Button -->
            <Button fx:id="toggleButton" layoutX="15.0" layoutY="21.0" mnemonicParsing="false" onAction="#toggleSideBar" prefHeight="35.0" prefWidth="38.0" styleClass="toggle-button" text="â˜°" />

            <!-- Feature Panels Container -->
            <VBox layoutX="70.0" layoutY="80.0" spacing="20.0">
                <!-- First Row -->
                <HBox spacing="20.0">
                    <Pane prefHeight="150.0" prefWidth="250.0" styleClass="action-card">
                        <children>
                            <Label layoutX="130.0" layoutY="20.0" text="Post Material" />
                            <Button layoutX="90.0" layoutY="110.0" prefWidth="150.0" text="Open" />
                        </children>
                    </Pane>
                    <Pane prefHeight="150.0" prefWidth="250.0" styleClass="action-card">
                        <children>
                            <Label layoutX="130.0" layoutY="20.0" text="Grade Students" />
                            <Button layoutX="90.0" layoutY="110.0" prefWidth="150.0" text="Open" />
                        </children>
                    </Pane>
                </HBox>

                <!-- Second Row -->
                <HBox spacing="20.0">
                    <Pane prefHeight="150.0" prefWidth="250.0" styleClass="action-card">
                        <children>
                            <Label layoutX="130.0" layoutY="20.0" text="Blank" />
                            <Button layoutX="90.0" layoutY="110.0" prefWidth="150.0" text="Open" />
                        </children>
                    </Pane>
                    <Pane prefHeight="150.0" prefWidth="250.0" styleClass="action-card">
                        <children>
                            <Label layoutX="130.0" layoutY="20.0" text="Blank" />
                            <Button layoutX="90.0" layoutY="110.0" prefWidth="150.0" text="Open" />
                        </children>
                    </Pane>
                </HBox>
            </VBox>
        </children>
    </AnchorPane>
</HBox>
