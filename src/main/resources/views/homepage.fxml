<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import utilities.Clock?>

<HBox fx:id="rootHBox" prefHeight="525.0" prefWidth="800.0"
      style="-fx-background-color: #94B4C1;"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.HomePageController">

   <AnchorPane fx:id="sideBar" prefWidth="221.0" style="-fx-background-color: #547792;">
      <children>
         <Clock layoutX="51.0" layoutY="14.0" width="120.0" height="120.0" />
         <Button layoutX="61.0" layoutY="142.0" mnemonicParsing="false"
                 prefHeight="35.0" prefWidth="100.0"
                 style="-fx-background-color: #4E8B55;" text="Home Page">
            <font>
               <Font name="Times New Roman" size="15.0" />
            </font>
         </Button>
         <Button layoutX="61.0" layoutY="203.0" mnemonicParsing="false"
                 onAction="#goToProfile"
                 prefHeight="35.0" prefWidth="100.0"
                 style="-fx-background-color: #67AE6E;" text="Profile">
            <font>
               <Font name="Times New Roman" size="15.0" />
            </font>
         </Button>
         <Button layoutX="61.0" layoutY="263.0" mnemonicParsing="false"
                 prefHeight="35.0" prefWidth="100.0"
                 style="-fx-background-color: #67AE6E;" text="Other">
            <font>
               <Font name="Times New Roman" size="15.0" />
            </font>
         </Button>
         <Button layoutX="61.0" layoutY="443.0" mnemonicParsing="false"
                 onAction="#goToLogOut"
                 prefHeight="35.0" prefWidth="100.0"
                 style="-fx-background-color: red;" text="Log Out">
            <font>
               <Font name="Times New Roman" size="15.0" />
            </font>
         </Button>
      </children>
   </AnchorPane>

   <AnchorPane fx:id="mainContent" style="-fx-background-color: #94B4C1;" HBox.hgrow="ALWAYS">
      <children>
         <Button fx:id="toggleButton" layoutX="15.0" layoutY="21.0" mnemonicParsing="false"
                 onAction="#toggleSideBar"
                 prefHeight="35.0" prefWidth="38.0"
                 style="-fx-background-color: #67AE6E;" text="â˜°">
            <font>
               <Font name="Times New Roman" size="15.0" />
            </font>
         </Button>
      </children>
   </AnchorPane>

</HBox>
