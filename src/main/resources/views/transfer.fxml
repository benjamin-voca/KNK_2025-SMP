<HBox fx:id="rootHBox" prefHeight="600.0" prefWidth="800.0" styleClass="root-layout" stylesheets="@../css/homepage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TransferController">
    <AnchorPane fx:id="sideBar" prefWidth="221.0" styleClass="sidebar">
        <children>
            <Button layoutX="61.0" layoutY="142.0" mnemonicParsing="false" onAction="#goToHomePage" prefHeight="35.0" prefWidth="100.0" styleClass="nav-button" text="Home Page" />
            <Button layoutX="61.0" layoutY="203.0" mnemonicParsing="false" onAction="#goToProfile" prefHeight="35.0" prefWidth="100.0" styleClass="nav-button" text="Profile" />
            <Button layoutX="61.0" layoutY="263.0" mnemonicParsing="false" onAction="#goToStudentCourses" prefHeight="35.0" prefWidth="100.0" styleClass="nav-button" text="Courses" />
            <Button layoutX="61.0" layoutY="323.0" mnemonicParsing="false" onAction="#goToClasses" prefHeight="35.0" prefWidth="100.0" styleClass="nav-button" text="Classes" />
            <Button layoutX="61.0" layoutY="383.0" mnemonicParsing="false" onAction="#goToTransfer" prefHeight="35.0" prefWidth="100.0" styleClass="primary-nav-button" text="Transfer" />
            <Button layoutX="61.0" layoutY="443.0" mnemonicParsing="false" onAction="#goToLogOut" prefHeight="35.0" prefWidth="100.0" styleClass="logout-button" text="Log Out" />
            <Clock height="120.0" layoutX="51.0" layoutY="14.0" width="120.0" />
        </children>
    </AnchorPane>
    <AnchorPane fx:id="transferPane" prefWidth="579.0" styleClass="content-pane">
        <children>
            <Label layoutX="50.0" layoutY="30.0" text="Transfer Request Form" styleClass="form-title">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <Label layoutX="50.0" layoutY="80.0" text="Student ID:" styleClass="form-label" />
            <TextField fx:id="studentIdField" layoutX="200.0" layoutY="75.0" prefWidth="200.0" editable="false" styleClass="form-field" />
            <Label layoutX="50.0" layoutY="120.0" text="Name:" styleClass="form-label" />
            <TextField fx:id="nameField" layoutX="200.0" layoutY="115.0" prefWidth="200.0" editable="false" styleClass="form-field" />
            <Label layoutX="50.0" layoutY="160.0" text="Surname:" styleClass="form-label" />
            <TextField fx:id="surnameField" layoutX="200.0" layoutY="155.0" prefWidth="200.0" editable="false" styleClass="form-field" />
            <Label layoutX="50.0" layoutY="200.0" text="Status:" styleClass="form-label" />
            <TextField fx:id="statusField" layoutX="200.0" layoutY="195.0" prefWidth="200.0" editable="false" styleClass="form-field" />
            <Label layoutX="50.0" layoutY="240.0" text="Current Program:" styleClass="form-label" />
            <TextField fx:id="currentProgramField" layoutX="200.0" layoutY="235.0" prefWidth="200.0" editable="false" styleClass="form-field" />
            <Label layoutX="50.0" layoutY="280.0" text="GPA:" styleClass="form-label" />
            <TextField fx:id="gpaField" layoutX="200.0" layoutY="275.0" prefWidth="200.0" editable="false" styleClass="form-field" />
            <Label layoutX="50.0" layoutY="320.0" text="Target Program:" styleClass="form-label" />
            <ComboBox fx:id="targetProgramCombo" layoutX="200.0" layoutY="315.0" prefWidth="200.0" styleClass="form-combo">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="IKS" />
                        <String fx:value="EAR" />
                        <String fx:value="EEN" />
                        <String fx:value="TIK" />
                    </FXCollections>
                </items>
            </ComboBox>
            <Button fx:id="submitButton" layoutX="200.0" layoutY="375.0" mnemonicParsing="false" onAction="#submitTransferRequest" prefHeight="35.0" prefWidth="100.0" styleClass="primary-button" text="Submit" />
        </children>
    </AnchorPane>
</HBox>