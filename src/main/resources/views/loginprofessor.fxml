<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="425.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.LogInProfessorController"
            stylesheets="@../css/loginprofessor.css"
            styleClass="login-pane">
   <children>
      <TextField fx:id="professorNumberField"
                 layoutX="100.0" layoutY="159.0"
                 prefHeight="30.0" prefWidth="200.0"
                 promptText="Enter professor number"
                 styleClass="input-field" />

      <PasswordField fx:id="passwordField"
                     layoutX="100.0" layoutY="245.0"
                     prefHeight="30.0" prefWidth="200.0"
                     promptText="Enter Password"
                     styleClass="input-field" />

      <Label layoutX="100.0" layoutY="128.0"
             text="Professor Number:"
             styleClass="label-text" />

      <Label layoutX="103.0" layoutY="213.0"
             text="Password:"
             styleClass="label-text" />

      <Button layoutX="150.0" layoutY="308.0"
              mnemonicParsing="false"
              onAction="#goToHomePage"
              prefHeight="35.0" prefWidth="100.0"
              text="Log In"
              styleClass="primary-button" />

      <Button layoutX="30.0" layoutY="31.0"
              mnemonicParsing="false"
              onAction="#closeLogIn"
              prefHeight="35.0" prefWidth="100.0"
              text="Close"
              styleClass="secondary-button" />
   </children>
</AnchorPane>
